/*
* ------------------------------------------------------------------------------
* Variables
* ------------------------------------------------------------------------------
*/

variable "public_key" {
  description = "The public key to apply to instances in the cluster."
}

/*
* ------------------------------------------------------------------------------
* Modules
* ------------------------------------------------------------------------------
*/
module "key_pair" {
  source     = "../key-pair"
  key_name   = "${var.name}"
  public_key = "${var.public_key}"
}

/*
* ------------------------------------------------------------------------------
* Outputs
* ------------------------------------------------------------------------------
*/

# The name of the key pair
output "key_pair_name" {
  value = "${module.key_pair.key_name}"
}
