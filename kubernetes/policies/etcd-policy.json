{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::concur-${name}",
        "arn:aws:s3:::concur-${name}/cloudinit",
        "arn:aws:s3:::concur-${name}/cloudinit/common/tls/*",
        "arn:aws:s3:::concur-${name}/cloudinit/etcd/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt"
      ],
      "Resource": [
        "${kms_key_arn}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "autoscaling:Describe*"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}
