{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:List*",
        "s3:Get*"
      ],
      "Resource": [
        "arn:aws:s3:::concur-${name}",
        "arn:aws:s3:::concur-${name}/cloudinit/common/tls/*",
        "arn:aws:s3:::concur-${name}/cloudinit/controller/*",
        "arn:aws:s3:::concur-${name}-etcd",
        "arn:aws:s3:::concur-${name}-etcd/cloudinit",
        "arn:aws:s3:::concur-${name}-etcd/cloudinit/common/tls/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:*"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "elasticloadbalancing:*"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "autoscaling:Describe*"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}
